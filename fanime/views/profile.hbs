{{>nav2}}
<div class="prf-main">
    <div class="prf-banner">
        <img src="{{banner}}">
    </div>
    <div class="prf-box">
        <div class="prf-container">
            <div class="prf-side"></div>
            <div class="prf-middle">
                <div class="profile-picture">     
                     
                    <img src={{pfp}}>
                   
                    </div> <!-- Profile picture div -->
                    <div class="profile-details">
                        <div class="username">{{username}}</div>
                      
                        <div class="prf-edit">
                            <a id="edit-profile-btn">
                                <img src="https://cdn-icons-png.flaticon.com/512/3597/3597088.png"></a>
                        </div>
                        <div id="edit-profile-popup" class="popup-overlay">
                            <div class="popup-content">
                                <!-- Edit Profile Form -->
                                <h2>Edit Profile</h2>
                                <form id="edit-profile-form">
                                    <label for="profile-pic">Profile Picture:</label><br>
                                    <input type="file" id="profile-pic" name="profile-pic"><br>
                                    <label for="username">Username:</label><br>
                                    <input type="text" id="username" name="username"><br>
                                    <label for="profile-banner">Profile Banner:</label><br>
                                    <input type="file" id="profile-banner" name="profile-banner"><br>
                                    <label for="bio">Bio:</label><br>
                                    <textarea id="bio" name="bio"></textarea><br>
                                    <label for="fav-img1">Favorite Anime 1 (Icon):</label><br>
                                    <input type="file" id="fav-img1" name="fav-img1"><br>
                                    <label for="fav-text1">Favorite Anime 1 (Title):</label><br>
                                    <input type="text" id="fav-text1" name="fav-text1"><br>
                                    <label for="fav-img1">Favorite Anime 2 (Icon):</label><br>
                                    <input type="file" id="fav-img1" name="fav-img1"><br>
                                    <label for="fav-text1">Favorite Anime 2 (Title):</label><br>
                                    <input type="text" id="fav-text1" name="fav-text1"><br>
                                    <label for="fav-img1">Favorite Manga 1 (Icon):</label><br>
                                    <input type="file" id="fav-img1" name="fav-img1"><br>
                                    <label for="fav-text1">Favorite Manga 1 (Title):</label><br>
                                    <input type="text" id="fav-text1" name="fav-text1"><br>
                                    <label for="fav-img1">Favorite Manga 2 (Icon):</label><br>
                                    <input type="file" id="fav-img1" name="fav-img1"><br>
                                    <label for="fav-text1">Favorite Manga 2 (Title):</label><br>
                                    <input type="text" id="fav-text1" name="fav-text1"><br>
                                    <!-- Repeat for each favorite -->
                                    <input type="submit" value="Submit">
                                </form>
                            </div>
                        </div>
                    </div> <!-- Content of the middle div -->
       
                <div class="bio-box">
                    {{bio}}
                </div>
                <div class="prf-favs">
                    <div class="favs-header">
                        <h1>Favorites</h1>
                    </div>
                    <div class="favs-body">
                        <div class="favs-inner">
                            <h2>Anime</h2>
                            {{#each favAnime}}
                            <div class="tooltip">
                                <img src={{animeIcon}}>
                                <span class="tooltiptext">{{animeTitle}}</span>
                            </div>
                            {{/each}}


                        </div>
                        <div class="favs-inner">
                            <h2>Manga</h2>
                            {{#each favManga}}
                            <div class="tooltip">
                                <img src={{mangaIcon}}>
                                <span class="tooltiptext">{{mangaTitle}}</span>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div> 
                <div class="prf-posts">
                    <!-- Posts content here -->
                        <h1>Posts</h1>
                        <div class="userposts">
                            <div class="filter-user-post">
                                <button>Top Posts</button>
                                <button>Latest Posts</button>
                                <button>Controversial</button>
                            </div>
                            
                            {{#each posts}}
                            <div class="user-post">
                                <div class="user-post-title" onclick="window.location.href = '/post/{{post-id}}';">
                                    <h2>{{post-title}}</h2>
                                </div>
                                <button onclick="window.location.href = '/editpost';">Edit</button>
                                <button>Delete</button>
                            </div>
                            {{/each}}
                        </div>
                </div>
                <div class="prf-posts">
                    <!-- Posts content here -->
                    
                        <h1>Comments</h1>
                    
                        <div class="userposts">
                            <div class="filter-user-post">
                                <button>Oldest Comments</button>
                                <button>Latest Comments</button>
                            </div>
                            {{#each comments}}
                            <div class="user-post">
                                <div class="user-post-title" onclick="window.location.href = '/post/{{post-id}}';">
                                    <h2>{{comment-title}}</h2>
                                </div>
                                <button onclick="window.location.href = '/editcomment';">Edit</button>
                                <button>Delete</button>
                            </div>
                            {{/each}}
                      
                        </div>
                </div>
            </div>
            <div class="prf-side"></div>
        </div>
    </div>
</div>