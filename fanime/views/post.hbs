<div class="main-website-structure">
{{>nav2}}
<div class="website-body">
    {{>topics}}
    <div class="content"> <!--Posts to be added-->
        <div class="content-header">
            <img src="https://i.pinimg.com/originals/14/b2/ca/14b2ca100b1b979983bdfdd24eac8a48.jpg"/>
        </div>
        <div class="post-margin">
            <div class="post-area">
                {{#with post}}
                <div class="post" name="id" value="hi">
                    <div class="post-header">
                        <div class="post-title">
                            <h2>{{post-title}}</h2>
                        </div>
                        <div class="post-profile">
                            <img src={{post-profile}}>
                        </div>
                        <h4>{{username}}</h4>
                        <h6>{{post-time}}</h6>
                    </div>
                    <div class="post-body">{{post-desc}}</div>
                    <div class="post-img">
                        <img src={{post-image}}>
                    </div>
                    <div class="post-action">
                        <i class="fa fa-thumbs-up"></i>{{post-thumbs.up}}
                        <i class="fa fa-thumbs-down"></i>{{post-thumbs.down}}
                        <button class="toggle-comment-section">Comments</button>
                    </div>
                    <div class="comment">
                        <form class="comment-form">
                            <textarea placeholder="Write your comment here..."></textarea>
                            <button type="submit"><h4>Comment</h4></button>
                        </form>
                    </div>
                    <div class="comment-section">
                        {{#each post-comments}}
                        <div class="comment-text">
                            <div class="comment-user">
                                <p>{{commentUser}}</p>
                            </div>
                            <p>{{comment}}</p>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
    </div>

    {{>filterPosts}}
</div>
</div>