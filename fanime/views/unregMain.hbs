{{>logReg}}
<div class="main-website-structure">
{{>nav1}}
<div class="website-body">
    {{>topics}}
    <div class="content"> <!--Posts to be added-->
        <div class="content-header">
            <img src="https://i.pinimg.com/originals/14/b2/ca/14b2ca100b1b979983bdfdd24eac8a48.jpg"/>
        </div>
        <div class="post-margin">
            <div class="post-area">
                {{#each posts}}
                <div class="post">
                    <div class="post-header">
                        <div class="post-title">
                            <h2>{{title}}</h2>
                        </div>
                        <div class="post-profile">
                            <img src={{post-profile}}>
                        </div>
                        <h4>{{username}}</h4>
                        <h6>{{date}}</h6>
                    </div>
                    <div class="post-body">{{description}}</div>
                    <div class="post-img">
                        <img src={{image}}>
                    </div>
                    <div class="post-action">
                        <i class="fa fa-thumbs-up"></i>{{post-thumbs.up}}
                        <i class="fa fa-thumbs-down"></i>{{post-thumbs.down}}
                        <button class="toggle-comment-section">Comments</button>
                    </div>
                    <div class="comment-section">
                        {{#each post-comments}}
                        <div class="comment-text">
                            <div class="comment-user">
                                <p>{{commentUser}}</p>
                            </div>
                            <p>{{comment}}</p>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    
    {{>filterPosts}}
</div>
</div>