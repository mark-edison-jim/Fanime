{{>logReg}}
<div class="main-website-structure">
{{>nav1}}
<div class="website-body">
    {{>topics}}
    <div class="content"> <!--Posts to be added-->
        {{>contentheader}}
        <div class="post-margin">
            <div class="post-area">
                {{#each posts}}
                <div class="post">
                    <div class="post-header">
                        <div class="post-title">
                            <h2>{{title}}</h2>
                        </div>
                        <div class="post-profile">
                            <img src={{post-profile}}>
                        </div>
                        <h4>{{username}}</h4>
                        <h6>{{date}}</h6>
                    </div>
                    <div class="post-body">{{description}}</div>
                    <div class="post-img">
                        <img src={{image}}>
                    </div>
                    <div class="post-action"><!--To be tested for like might remove like and dislike if logged out-->
                        <i class="fa fa-thumbs-up like" data-post-id="{{_id}}">{{like}}</i>
                        <i class="fa fa-thumbs-down dislike" id="{{_id}}">{{dislike}}</i>
                        <button class="toggle-comment-section">Comments</button>
                    </div>
                    <div id="comment-section" class="comment-section">
                        <div class="comment-container">
                            {{#each post-comments}}
                            <div class="comment-text">
                                <div class="comment-user">
                                    <p>{{commentUser}}</p>
                                </div>
                                <p>{{comment}}</p>
                            </div>
                        {{/each}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    
    {{>filterPosts}}
</div>
</div>